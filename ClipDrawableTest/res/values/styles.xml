    <style name="customeActionbarTheme1" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:popupBackground">#0000ff</item>
        <item name="android:textAppearanceLargePopupMenu">@style/CustomActionBarTextStyle</item>
        <item name="actionMenuTextColor">#00ff00</item>
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <!-- <item name="android:dropDownListViewStyle">@style/MyDropDownListView</item> -->
        <item name="android:selectableItemBackground">@drawable/alphabg</item>
        <item name="android:actionOverflowButtonStyle">@style/MyOverflowButton</item>
               <item name="actionBarWidgetTheme">@style/ActionBarWidget</item>
        <item name="searchViewAutoCompleteTextView">@style/Theme.Test.SearchField</item>
    </style>
    <!-- Search edit text -->
    <style name="Theme.Test.SearchField" parent="@style/Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorHint">#ffffff</item>
    </style>

    <style name="ActionBarWidget" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- SearchView customization -->
        <item name="searchViewSearchIcon">@drawable/iv1</item>
        <item name="searchViewCloseIcon">@drawable/iv2</item>
        <item name="searchViewTextField">@drawable/iv3</item>
        <item name="searchViewAutoCompleteTextView">@style/AutoCompleteTextView</item>
    </style>

    <style name="AutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@android:color/white</item>
        <!-- <item name="android:textCursorDrawable">@null</item> -->
        <item name="android:textColorHighlight">#00ff00</item>
    </style>

    <!-- overflow图标的修改 -->
    <style name="MyOverflowButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@android:drawable/ic_menu_view</item>
        <!-- <item name="android:background">#00ff00</item> -->
    </style>
    <!-- 修改actionbar的title字体颜色parent最低要求13 -->
    <style name="MyActionBarTitleText" >
        <item name="android:textColor">#ff0000</item>
        <item name="android:textSize">10sp</item>
    </style>
    <!-- actionbar背景设置，title字体设置 -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:background">#f4842d</item>
    </style>

    <!-- 修改popupmenu的字体颜色 parent最低要求13-->
    <style name="CustomActionBarTextStyle" >
        <item name="android:textColor">#ff0000</item>
    </style>

    <!-- style the overflow menu 未点击效果 -->
    <style name="MyPopupMenu" parent="android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/btnok2blue</item>
        <item name="android:gravity">right</item>
    </style>
<!-- style the overflow menu 点击效果 -->
    <style name="MyDropDownListView" parent="android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/btnok1green</item>
        <item name="android:width">300dp</item>
    </style>

</resources>